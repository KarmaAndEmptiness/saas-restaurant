{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    // 新增以下配置 👇
    "types": [
      "axios"
    ], // 加载 axios 类型声明
    "module": "ESNext", // 明确使用 ESM 模块规范
    "allowSyntheticDefaultImports": true // 允许 CJS 模块的默认导入
  }
}
